<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.appbase">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".view.activity.MessageActivity"></activity>
        <activity android:name=".view.activity.MensagemActivity" />
        <activity android:name=".view.activity.ApresentacaoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.CadastroUsuarioActivity" />
        <activity android:name=".view.activity.MainActivity" />
        <activity
            android:name=".view.activity.MeusLocaisActivity"
            android:label="@string/meus_locais" />
        <activity
            android:name=".view.activity.CadastroLocalActivity"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>