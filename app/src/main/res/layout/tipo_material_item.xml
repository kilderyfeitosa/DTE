<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="8dp">

    <CheckBox
        android:id="@+id/check_tipo_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descricao_tipo_material_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Descricao tipo material"
        android:textColor="@color/black_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/check_tipo_material"
        app:layout_constraintStart_toEndOf="@+id/check_tipo_material"
        app:layout_constraintTop_toTopOf="@+id/check_tipo_material" />


</android.support.constraint.ConstraintLayout>